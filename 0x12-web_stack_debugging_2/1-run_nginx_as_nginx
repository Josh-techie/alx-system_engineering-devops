#!/usr/bin/env bash
# This script configures Nginx to run as the nginx user

# Modify Nginx configuration to run as nginx user
sed -i 's/user\s*nginx;/user nginx;/' /etc/nginx/nginx.conf

# Ensure Nginx is listening on all active IPs on port 8080
sed -i 's/listen\s*\(.*\):80;/listen 0.0.0.0:8080;/' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart
